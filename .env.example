# Todoist API Token
# 取得方法: https://todoist.com/app/settings/integrations/developer
TODOIST_API_TOKEN=your_todoist_api_token_here

# ODPT (公共交通オープンデータセンター) API
# 取得方法: https://developer.odpt.org/
ODPT_API_KEY=your_odpt_api_key_here

# NextAuth.js
# openssl rand -base64 32 で生成
AUTH_SECRET=your_auth_secret_here

# Google OAuth
# 取得方法: https://console.cloud.google.com/apis/credentials
# 1. OAuth 2.0 クライアントIDを作成
# 2. 承認済みリダイレクトURIに以下を追加:
#    - http://localhost:3001/api/auth/callback/google (開発環境)
#    - https://your-domain.com/api/auth/callback/google (本番環境)
AUTH_GOOGLE_ID=your_google_client_id_here
AUTH_GOOGLE_SECRET=your_google_client_secret_here

# NIT Portal (大学ポータルサイト) - ローカル環境のみ
# Vercel環境ではGitHub Actions経由でGistから取得
NIT_PORTAL_USER_ID=your_portal_user_id_here
NIT_PORTAL_PASSWORD=your_portal_password_here

# Vercel環境用: ポータルお知らせのGist ID
# GitHub Gistを作成し、そのIDを設定
PORTAL_GIST_ID=your_gist_id_here

# Vercel環境用: FormsデータのGist ID
# GitHub Gistを作成し、そのIDを設定
FORMS_GIST_ID=your_forms_gist_id_here

# GitHub Personal Access Token (Gist書き込み用)
# 取得方法: https://github.com/settings/tokens
# 必要なスコープ: gist
GITHUB_TOKEN=your_github_token_here

# Web Push (VAPID)
# npx web-push generate-vapid-keys で生成
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here

# プッシュ購読情報のGist ID
PUSH_SUBSCRIPTIONS_GIST_ID=your_push_subscriptions_gist_id_here

# 本番環境URL (Vercel)
# AUTH_URL=https://your-domain.vercel.app
# NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app

# 開発環境URL (ngrok使用時)
# AUTH_URL=https://your-ngrok-url.ngrok-free.dev
# NEXT_PUBLIC_APP_URL=https://your-ngrok-url.ngrok-free.dev
